<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="23">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <!-- Toolbar theme -->
    <style name="ToolbarTitle" parent="TextAppearance.AppCompat.Title">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <!-- Add contact button style -->
    <style name="ContactButton" parent="Base.Widget.AppCompat.Button">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/add_contact_text_color
        </item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Secondary text theme -->
    <style name="SecondaryTextTheme" parent="TextAppearance.AppCompat.Body1">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Tertiary text theme -->
    <style name="TertiaryTextTheme" parent="TextAppearance.AppCompat.Body1">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Splash app name text theme -->
    <style name="SplashTitleTheme" parent="TextAppearance.AppCompat.Display3">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
