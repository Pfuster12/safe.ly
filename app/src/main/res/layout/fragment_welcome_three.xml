<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.WelcomeThreeFragment">

    <ImageView
        android:id="@+id/scene"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_chainStyle="spread"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/description_text"
        android:padding="@dimen/double_general_margin"
        android:src="@drawable/ic_help_scene"
        android:alpha="0.8"/>

    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_screen_3_text"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/scene"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/double_general_margin"
        style="@style/SecondaryTextTheme"/>

</android.support.constraint.ConstraintLayout>